{
  "manifest_version": 3,
  "name": "URL Checker",
  "version": "1.0",
  "description": "A Chrome extension to check the safety of URLs using the VirusTotal API.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.virustotal.com/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "logo192.png",
    "128": "logo192.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}












